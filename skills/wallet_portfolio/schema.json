{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "public_skills": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "fetch_wallet_portfolio",
                    "fetch_chain_portfolio",
                    "fetch_asset_portfolio",
                    "fetch_nft_portfolio",
                    "fetch_transaction_history"
                ]
            },
            "description": "List of public skills that are available to all users"
        },
        "private_skills": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "fetch_wallet_portfolio",
                    "fetch_chain_portfolio",
                    "fetch_asset_portfolio",
                    "fetch_nft_portfolio",
                    "fetch_transaction_history"
                ]
            },
            "description": "List of private skills that are only available to privileged users"
        },
        "api_key": {
            "type": "string",
            "description": "API key for external services"
        }
    },
    "required": [
        "public_skills",
        "api_key"
    ],
    "additionalProperties": true
}