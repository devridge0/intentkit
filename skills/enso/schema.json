{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Enso Skills",
  "description": "Configuration schema for Enso skills",
  "x-icon": "https://ai.service.crestal.dev/skills/enso/enso.jpg",
  "x-tags": [
    "Blockchain"
  ],
  "properties": {
    "enabled": {
      "type": "boolean",
      "title": "Enabled",
      "description": "Whether this skill is enabled",
      "default": false
    },
    "public_skills": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "get_networks",
          "get_tokens",
          "get_prices",
          "route_shortcut",
          "get_wallet_approvals",
          "get_wallet_balances",
          "wallet_approve"
        ]
      },
      "description": "List of public skills that are available to all users"
    },
    "private_skills": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "get_networks",
          "get_tokens",
          "get_prices",
          "route_shortcut",
          "get_wallet_approvals",
          "get_wallet_balances",
          "wallet_approve"
        ]
      },
      "description": "List of private skills that are only available to privileged users"
    },
    "api_token": {
      "type": "string",
      "description": "Enso API token"
    },
    "main_tokens": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of main tokens to use"
    },
    "states": {
      "type": "object",
      "properties": {
        "route_shortcut": {
          "type": "string",
          "title": "Route Shortcut",
          "enum": [
            "disabled",
            "public",
            "private"
          ],
          "description": "State for route_shortcut",
          "default": "disabled"
        },
        "get_prices": {
          "type": "string",
          "title": "Get Prices",
          "enum": [
            "disabled",
            "public",
            "private"
          ],
          "description": "State for get_prices",
          "default": "disabled"
        },
        "get_wallet_approvals": {
          "type": "string",
          "title": "Get Wallet Approvals",
          "enum": [
            "disabled",
            "public",
            "private"
          ],
          "description": "State for get_wallet_approvals",
          "default": "disabled"
        },
        "get_wallet_balances": {
          "type": "string",
          "title": "Get Wallet Balances",
          "enum": [
            "disabled",
            "public",
            "private"
          ],
          "description": "State for get_wallet_balances",
          "default": "disabled"
        },
        "wallet_approve": {
          "type": "string",
          "title": "Wallet Approve",
          "enum": [
            "disabled",
            "public",
            "private"
          ],
          "description": "State for wallet_approve",
          "default": "disabled"
        },
        "get_networks": {
          "type": "string",
          "title": "Get Networks",
          "enum": [
            "disabled",
            "public",
            "private"
          ],
          "description": "State for get_networks",
          "default": "disabled"
        },
        "get_tokens": {
          "type": "string",
          "title": "Get Tokens",
          "enum": [
            "disabled",
            "public",
            "private"
          ],
          "description": "State for get_tokens",
          "default": "disabled"
        }
      },
      "description": "States for each Enso skill (disabled, public, or private)"
    }
  },
  "required": [
    "public_skills",
    "api_token",
    "main_tokens",
    "enabled"
  ],
  "additionalProperties": true
}