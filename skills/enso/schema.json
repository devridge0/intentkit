{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Enso Skills",
  "description": "Configuration schema for Enso skills",
  "x-icon": "https://ai.service.crestal.dev/skills/enso/enso.jpg",
  "x-tags": [
    "Blockchain"
  ],
  "properties": {
    "public_skills": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "get_networks",
          "get_tokens",
          "get_prices",
          "route_shortcut",
          "get_wallet_approvals",
          "get_wallet_balances",
          "wallet_approve"
        ]
      },
      "description": "List of public skills that are available to all users"
    },
    "private_skills": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "get_networks",
          "get_tokens",
          "get_prices",
          "route_shortcut",
          "get_wallet_approvals",
          "get_wallet_balances",
          "wallet_approve"
        ]
      },
      "description": "List of private skills that are only available to privileged users"
    },
    "api_token": {
      "type": "string",
      "description": "Enso API token"
    },
    "main_tokens": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of main tokens to use"
    },
    "enabled": {
      "type": "boolean",
      "title": "Enabled",
      "description": "Whether this skill is enabled",
      "default": true
    }
  },
  "required": [
    "public_skills",
    "api_token",
    "main_tokens",
    "enabled"
  ],
  "additionalProperties": true
}